apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: "{{ meta.name }}-tiller"
subjects:
- kind: ServiceAccount
  name: tiller
  # Replace this with the namespace the operator is deployed in.
  namespace: "{{ meta.name }}"
roleRef:
  kind: ClusterRole
  name: "{{ meta.name }}-tiller"
  apiGroup: rbac.authorization.k8s.io
